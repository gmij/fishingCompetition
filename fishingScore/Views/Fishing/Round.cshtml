@model IList<fishingScore.Models.RoundScoreViewModel>

<table class="table">
    <tr>
        <th>
            选手名字
        </th>
        <th>
            选手编号
        </th>
        <th>
            成绩
        </th>
        <th></th>
    </tr>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    //foreach (var item in Model)
    for(var i = 0; i < Model?.Count(); i++)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model[i].Contestant.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model[i].Contestant.Number)
            </td>
            <td>
                @Html.HiddenFor(model => Model[i].Id)
                @Html.EditorFor(modelItem => Model[i].Result)
            </td>
        </tr>
    }

    <tr>
        <td colspan="4">
            <input type="submit" value="结束本场比赛" class="btn btn-default" />
        </td>
    </tr>
            

}
</table>
